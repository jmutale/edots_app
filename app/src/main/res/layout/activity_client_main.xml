<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout">

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3399ff"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Name placeholder"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="#fff"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingRight="5dp"
            android:paddingBottom="20dp">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:text=""
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textViewDob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:text="DOB: "
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="36dp"
                android:clickable="true"
                android:text="Gender: "
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:text="01/01/2017"
                android:textSize="24sp"
                app:layout_constraintLeft_toRightOf="@+id/textViewDob"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:text="Male"
                android:textSize="24sp"
                app:layout_constraintLeft_toRightOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/mobileNumber" />

            <TextView
                android:id="@+id/occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:text=""
                app:layout_constraintLeft_toRightOf="@+id/textView7"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/mobileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="28dp"
                android:clickable="true"
                android:text="9876543210"
                android:textSize="24sp"
                app:layout_constraintLeft_toRightOf="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/occupation" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="28dp"
                android:clickable="true"
                android:text="Mobile: "
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <Button
                android:id="@+id/btnClientStatus"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:text="Client Status"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/btnClientFeedback"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnClientFeedback"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:text="Client Feedback"
                app:layout_constraintBottom_toTopOf="@id/btnDispenseDrugToClient"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button

                android:id="@+id/btnDispenseDrugToClient"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:text="Dispense drug"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btnEdotSurvey"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button

                android:id="@+id/btnEdotSurvey"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:text="eDot Survey"
                app:layout_constraintBottom_toTopOf="@id/btnClientTBLabs"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button

                android:id="@+id/btnClientTBLabs"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:text="TB Lab Results"
                app:layout_constraintBottom_toBottomOf="@id/btnEdotSurvey"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dispConstLayoutParent"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:layout_below="@+id/constLayout1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="#fff"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingRight="5dp"
            android:paddingBottom="20dp">

            <ListView
                android:id="@+id/dispensationList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="19dp"
                app:layout_constraintBottom_toBottomOf="@id/constLayout1"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="NotSibling">


            </ListView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>


</ScrollView>